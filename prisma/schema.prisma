// Prisma Schema for South Side Tech Customer Dashboard
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - stores user information with Google Auth and role-based access
model User {
  id                    String   @id @default(cuid())
  email                 String   @unique
  name                  String?
  image                 String?  // Google profile image
  companyName           String?  // Company name from registration
  companyId             String?  // Unique company identifier (prevents conflicts with same company names, multiple users can share)
  role                  UserRole @default(CLIENT) // Primary role for NextAuth adapter compatibility
  roles                 String[] @default(["CLIENT"]) // Role-based access control - supports multiple roles per user (stored as text array in PostgreSQL)
  emailVerified         DateTime? // NextAuth email verification
  questionnaireCompleted Boolean  @default(false) // Track if user has completed onboarding questionnaire
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Stripe Connect fields (for contractor payments)
  stripeConnectAccountId   String?  @unique
  stripeOnboardingComplete Boolean  @default(false)
  defaultPaymentRate       Float?
  bankAccountLast4         String?
  bankAccountVerified      Boolean  @default(false)

  // Stripe Customer fields (for client payments)
  stripeCustomerId         String?  @unique
  defaultPaymentMethodId   String?
  paymentMethodLast4       String?
  paymentMethodType        String?

  // Relations
  projects              Project[]
  supportTickets        SupportTicket[]
  documents             Document[]
  folders               Folder[]
  subscription          Subscription?
  invoices              Invoice[]
  projectAssignments    ProjectAssignment[] @relation("ProjectAssignments")
  ticketAssignments     TicketAssignment[]  @relation("TicketAssignments")
  comments              Comment[]
  activityLogs          ActivityLog[]
  contractorPayouts     ContractorPayout[]
  payments              Payment[]
  deposits              Deposit[]
  creditBalance         CreditBalance?
  contractorApplication ContractorApplication?
  accounts              Account[]
  sessions              Session[]

  @@map("users")
}

enum UserRole {
  ADMIN
  CONTRACTOR
  CLIENT
}

// Project model
model Project {
  id                   String   @id @default(cuid())
  name                 String
  description          String?
  status               ProjectStatus @default(PLANNING)
  progress             Int       @default(0) // 0-100
  startDate            DateTime
  estimatedCompletion  DateTime?
  lastUpdated          DateTime  @updatedAt
  assignedTeam         String[]  // Array of team member names (deprecated, use assignments relation)
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Financial tracking
  depositRequired     Boolean  @default(false)
  depositAmount       Float?
  depositPaid         Boolean  @default(false)

  assignments          ProjectAssignment[]
  comments             Comment[]
  activityLogs         ActivityLog[]
  invoices             Invoice[]
  deposits             Deposit[]

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@map("projects")
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  REVIEW
  COMPLETED
}

// Support Ticket model
model SupportTicket {
  id          String             @id @default(cuid())
  ticketNumber String           @unique // Human-readable ticket number like "1234"
  subject     String
  description String?            @db.Text
  status      SupportTicketStatus @default(OPEN)
  priority    Priority           @default(MEDIUM)
  userId      String
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignments TicketAssignment[]
  comments    Comment[]
  activityLogs ActivityLog[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  @@map("support_tickets")
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// Folder model - organizes documents by folder
model Folder {
  id        String   @id @default(cuid())
  name      String   // Folder name (e.g., "Billing", "Technical")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents Document[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@map("folders")
}

// Document model - stores metadata, actual files in S3/R2
model Document {
  id          String           @id @default(cuid())
  name        String
  type        String           // pdf, docx, xlsx, etc.
  size        BigInt           // bytes
  category    DocumentCategory
  downloadUrl String           // S3/R2 signed URL or path
  userId      String
  folderId    String?
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder      Folder?          @relation(fields: [folderId], references: [id], onDelete: SetNull)
  uploadedAt  DateTime         @default(now())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([folderId])
  @@map("documents")
}

enum DocumentCategory {
  CONTRACT
  INVOICE
  REPORT
  DOCUMENTATION
}

// Subscription model
model Subscription {
  id              String   @id @default(cuid())
  plan            String
  billing         BillingCycle @default(MONTHLY)
  amount          Float
  nextBillingDate DateTime
  paymentMethod   String   // JSON string with payment details
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe integration fields
  stripeSubscriptionId     String?  @unique
  stripeProductId          String?
  stripePriceId            String?
  currentPeriodStart       DateTime?
  currentPeriodEnd         DateTime?
  cancelAtPeriodEnd        Boolean  @default(false)
  canceledAt               DateTime?
  status                   SubscriptionStatus @default(ACTIVE)
  planType                 SubscriptionPlanType @default(CUSTOM)

  payments        Payment[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
  @@index([stripeSubscriptionId])
  @@map("subscriptions")
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  INCOMPLETE_EXPIRED
  TRIALING
  UNPAID
}

enum SubscriptionPlanType {
  BASIC
  PROFESSIONAL
  ENTERPRISE
  CUSTOM
}

// Invoice model
model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  date          DateTime
  dueDate       DateTime?
  amount        Float
  status        InvoiceStatus @default(PENDING)
  downloadUrl   String        // URL to PDF
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe integration fields
  stripeInvoiceId       String?  @unique
  stripePaymentIntentId String?  @unique
  stripeCheckoutSessionId String? @unique

  // Additional fields
  description   String?       @db.Text
  lineItems     Json?
  metadata      Json?
  projectId     String?
  paidAt        DateTime?

  project       Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  payments      Payment[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId])
  @@index([status])
  @@index([projectId])
  @@map("invoices")
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PROCESSING
  PAID
  OVERDUE
  CANCELLED
  REFUNDED
}

// ProjectAssignment model - many-to-many relationship between Projects and Contractors
model ProjectAssignment {
  id        String   @id @default(cuid())
  projectId String
  userId    String   // Contractor user ID
  assignedAt DateTime @default(now())
  assignedBy String?  // Admin user ID who made the assignment

  // Payment tracking fields
  paymentAmount   Float?
  paymentStatus   PaymentStatus @default(UNPAID)
  paymentDueDate  DateTime?
  paidAt          DateTime?
  payoutId        String?

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User    @relation("ProjectAssignments", fields: [userId], references: [id], onDelete: Cascade)
  payout    ContractorPayout? @relation(fields: [payoutId], references: [id], onDelete: SetNull)

  @@unique([projectId, userId])
  @@index([userId])
  @@index([projectId])
  @@index([paymentStatus])
  @@index([payoutId])
  @@map("project_assignments")
}

enum PaymentStatus {
  UNPAID
  PENDING
  PROCESSING
  PAID
  FAILED
  CANCELLED
}

// TicketAssignment model - many-to-many relationship between Support Tickets and Contractors
model TicketAssignment {
  id        String   @id @default(cuid())
  supportTicketId String
  userId    String   // Contractor user ID
  assignedAt DateTime @default(now())
  assignedBy String?  // Admin user ID who made the assignment

  supportTicket SupportTicket @relation(fields: [supportTicketId], references: [id], onDelete: Cascade)
  user          User          @relation("TicketAssignments", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([supportTicketId, userId])
  @@index([userId])
  @@index([supportTicketId])
  @@map("ticket_assignments")
}

// ContractorApplication model - tracks contractor onboarding applications
model ContractorApplication {
  id                      String   @id @default(cuid())
  userId                  String   @unique // One application per user
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Application status
  status                  ContractorApplicationStatus @default(PENDING) // PENDING, APPROVED, REJECTED
  submittedAt             DateTime @default(now())
  reviewedAt              DateTime?
  reviewedBy              String?  // Admin user ID who reviewed
  rejectionReason         String?  // If rejected, why

  // Contractor details from form
  fullName                String
  email                   String
  companyName             String?
  companyRegistration     String?
  businessType            String?  // Freelancer, Agency, Corporation, etc.

  // Contact information
  phone                   String?
  website                 String?
  portfolio               String?  // Link to portfolio

  // Address information
  addressLine1            String?
  addressLine2            String?
  city                    String?
  state                   String?
  postalCode              String?
  country                 String?

  // Bank account info (optional, for payment setup)
  bankAccountName         String?
  bankRoutingNumber       String?
  bankAccountNumber       String?
  bankAccountType         String?  // checking, savings
  bankVerified            Boolean  @default(false)

  // Payment preferences
  setupPaymentNow         Boolean  @default(false) // Whether they chose to set up Stripe Connect
  stripeConnectAccountId  String?  // Created if setupPaymentNow was true

  // Additional info
  serviceCategories       String[] // Areas of expertise
  hourlyRate              Float?
  bio                     String?  @db.Text

  metadata                Json?    // Any additional form data

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([submittedAt])
  @@map("contractor_applications")
}

enum ContractorApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

// ContractorPayout model - tracks batch payouts to contractors
model ContractorPayout {
  id               String           @id @default(cuid())
  contractorId     String
  batchId          String
  stripeTransferId String?          @unique
  stripePayoutId   String?
  amount           Float            // Gross payout amount before fees
  currency         String           @default("usd")

  // Fee tracking
  stripeFeeAmount  Float            @default(0)    // Stripe Connect fee per payout (0.25% + $0.25)
  netAmount        Float?           // Amount after fees (amount - stripeFeeAmount)

  status           PayoutStatus     @default(PENDING)
  assignments      ProjectAssignment[]
  processedBy      String?
  processedAt      DateTime         @default(now())
  completedAt      DateTime?
  failureReason    String?
  contractor       User             @relation(fields: [contractorId], references: [id], onDelete: Cascade)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@index([contractorId])
  @@index([batchId])
  @@index([status])
  @@map("contractor_payouts")
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

// Payment model - transaction log for all client payments
model Payment {
  id              String        @id @default(cuid())
  type            PaymentType   // INVOICE, SUBSCRIPTION, DEPOSIT, CREDIT_PURCHASE, REFUND
  amount          Float         // Gross amount paid by customer
  currency        String        @default("usd")

  // Fee tracking for Stripe transactions
  stripeFeeAmount Float         @default(0)     // Stripe processing fee (2.9% + $0.30 for cards)
  connectFeeAmount Float        @default(0)     // Stripe Connect fee (0.25% + $0.25 per payout)
  platformFeeAmount Float       @default(0)     // Total fees deducted from amount
  netAmount       Float?        // Amount after fees (amount - platformFeeAmount)

  // Stripe references
  stripePaymentIntentId String?  @unique
  stripeChargeId        String?  @unique
  stripeCheckoutSessionId String? @unique

  status          PaymentStatus @default(PENDING)

  // Relations
  userId          String
  invoiceId       String?
  subscriptionId  String?
  depositId       String?

  description     String?
  metadata        Json?
  failureReason   String?

  processedAt     DateTime?
  completedAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoice         Invoice?      @relation(fields: [invoiceId], references: [id], onDelete: SetNull)
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  deposit         Deposit?      @relation(fields: [depositId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@map("payments")
}

enum PaymentType {
  INVOICE
  SUBSCRIPTION
  DEPOSIT
  CREDIT_PURCHASE
  REFUND
}

// Deposit model - tracks project deposits
model Deposit {
  id              String        @id @default(cuid())
  amount          Float
  description     String?
  purpose         String?
  status          DepositStatus @default(PENDING)

  userId          String
  projectId       String?
  stripePaymentIntentId String? @unique

  paidAt          DateTime?
  refundedAt      DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  project         Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  payments        Payment[]

  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@map("deposits")
}

enum DepositStatus {
  PENDING
  PAID
  REFUNDED
  EXPIRED
}

// Credit Balance model - retainer system
model CreditBalance {
  id              String   @id @default(cuid())
  currentBalance  Float    @default(0)
  lifetimeCredits Float    @default(0)
  lifetimeUsed    Float    @default(0)

  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions    CreditTransaction[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("credit_balances")
}

// Credit Transaction model - tracks credit movements
model CreditTransaction {
  id              String              @id @default(cuid())
  type            CreditTransactionType
  amount          Float
  description     String
  balanceAfter    Float

  creditBalanceId String
  paymentId       String?
  invoiceId       String?

  creditBalance   CreditBalance       @relation(fields: [creditBalanceId], references: [id], onDelete: Cascade)
  createdAt       DateTime            @default(now())

  @@index([creditBalanceId])
  @@index([type])
  @@map("credit_transactions")
}

enum CreditTransactionType {
  PURCHASE
  DEDUCTION
  REFUND
  ADJUSTMENT
  EXPIRATION
}

// Webhook Event model - idempotency tracking
model WebhookEvent {
  id            String   @id @default(cuid())
  stripeEventId String   @unique
  type          String
  processedAt   DateTime?
  failedAt      DateTime?
  error         String?
  createdAt     DateTime @default(now())

  @@index([type])
  @@map("webhook_events")
}

// Comment model - comments on projects and support tickets
model Comment {
  id                String   @id @default(cuid())
  content           String   @db.Text
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId         String?
  project           Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  supportTicketId   String?
  supportTicket     SupportTicket? @relation(fields: [supportTicketId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([projectId])
  @@index([supportTicketId])
  @@index([userId])
  @@map("comments")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Activity Log model - tracks project and ticket status changes, and payment events
model ActivityLog {
  id              String   @id @default(cuid())
  type            String   // 'project_status_change', 'ticket_status_change', 'payment_processed', 'payment_failed', etc
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId       String?
  project         Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  supportTicketId String?
  supportTicket   SupportTicket? @relation(fields: [supportTicketId], references: [id], onDelete: Cascade)
  payoutId        String?  // For payment event tracking
  oldValue        String?  // previous status
  newValue        String   // new status
  metadata        Json?    // Additional context (amounts, reasons, etc)
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([projectId])
  @@index([supportTicketId])
  @@index([payoutId])
  @@map("activity_logs")
}
